{
  "manifest_version": 3,
  "name": "ProTect",
  "version": "0.1",
  "version_name": "0.1 alpha",
  "description": "A state of the art privacy protector",
  "icons": {
    "16": "icons/color-16.png",
    "48": "icons/color-48.png",
    "128": "icons/color-128.png",
    "16": "icons/sw-16.png",
    "48": "icons/sw-48.png",
    "128": "icons/sw-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/sw-16.png",
      "48": "icons/sw-48.png",
      "128": "icons/sw-128.png"
    },
    "default_popup": "popup/popup.html"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"]
    },
    {
      "matches": ["https://displate.com/*"],
      "js": ["content/displate-ads.js"]
    },
    {
      "matches": ["https://www.thomann.de/*"],
      "js": ["content/thomann-ads.js"]
    }
  ]
}